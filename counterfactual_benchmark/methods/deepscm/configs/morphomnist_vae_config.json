{
    "causal_graph": {
        "thickness": [],
        "intensity": ["thickness"],
        "digit": [],
        "image": ["thickness", "intensity", "digit"]
    },
    "attribute_size": {
        "thickness": 1,
        "intensity": 1,
        "digit": 10
    },
    "mechanism_models": {
        "thickness": {
            "model_type": "flow",
            "model_class": "ThicknessFlow",
            "module": "models.flows",
            "params": {
                "layers": 3,
                "lr": 1e-3,
                "batch_size_train" : 64,
                "batch_size_val" : 10000,
                "patience" : 2,
                "max_epochs" : 1000,
                "train_val_split" : 0.8
            }
        },
        "intensity": {
            "model_type": "flow",
            "model_class": "IntensityFlow",
            "module": "models.flows",
            "params": {
                "layers": 3,
                "lr": 1e-3,
                "batch_size_train" : 64,
                "batch_size_val" : 10000,
                "patience" : 2,
                "max_epochs" : 1000,
                "train_val_split" : 0.8
            }
        },
        "image": {
            "model_type": "vae",
            "model_class": "MmnistCondVAE",
            "module": "models.vaes",
            "params": {
                "n_chan" : [1, 32, 32, 32],
                "latent_dim" : 16,
                "hidden_dim": 128,
                "beta" : 1,
                "lr" : 1e-3,
                "gradient_clip_val": 350,
                "batch_size_train" : 512,
                "batch_size_val" : 512,
                "patience" : 10,
                "max_epochs" : 1000,
                "train_val_split" : 0.8,
                "weight_decay": 0.01,
                "ema": "True",
                "fixed_logvar": -5.0
            }
        }
    },

    "dataset": "morphomnist",
    "checkpoint_dir": "./checkpoints/trained_scm"
}
